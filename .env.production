# 生产环境配置文件
# 复制此文件为 .env 并根据需要修改配置

# 应用环境
FLASK_ENV=production

# 安全密钥（请修改为随机生成的密钥）
SECRET_KEY=crm-production-secret-key-2024-change-me

# 数据库配置
DATABASE_URL=sqlite:///instance/edu_crm.db

# Gunicorn配置
GUNICORN_WORKERS=2
GUNICORN_TIMEOUT=120

# Python环境优化
PYTHONUNBUFFERED=1
PYTHONDONTWRITEBYTECODE=1

# 日志级别
LOG_LEVEL=INFO

# 应用端口（容器内部）
PORT=80
