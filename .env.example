# EduConnect CRM 环境变量配置示例
# 复制此文件为 .env 并根据需要修改配置

# 应用环境 (development/production/testing)
FLASK_ENV=production

# 数据库配置
DATABASE_URL=sqlite:///instance/edu_crm.db

# 安全密钥 (生产环境请使用强密码)
SECRET_KEY=your-super-secret-key-change-this-in-production

# 日志级别 (DEBUG/INFO/WARNING/ERROR)
LOG_LEVEL=INFO

# Gunicorn配置
GUNICORN_WORKERS=2
GUNICORN_TIMEOUT=120

# 邮件配置 (可选)
MAIL_SERVER=
MAIL_PORT=587
MAIL_USE_TLS=true
MAIL_USERNAME=
MAIL_PASSWORD=

# Redis配置 (可选)
REDIS_URL=
