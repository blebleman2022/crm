# 生产环境配置示例文件
# 复制此文件为 .env 并修改相应的值

# Flask配置
SECRET_KEY=crm-production-secret-key-2024-change-this
FLASK_ENV=production
FLASK_DEBUG=False

# 数据库配置
DATABASE_URL=sqlite:///instance/edu_crm.db

# 日志级别
LOG_LEVEL=INFO

# Gunicorn配置
GUNICORN_WORKERS=2
GUNICORN_TIMEOUT=120

# 应用配置
APP_NAME=EduConnect CRM
APP_VERSION=1.0.0

# 安全配置
PYTHONUNBUFFERED=1
PYTHONDONTWRITEBYTECODE=1
